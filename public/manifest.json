{
    "manifest_version": 3,
    "name": "YouTube Shorts Remover",
    "version": "1.0",
    "description": "Hides YouTube Shorts from the homepage, search results, subscriptions, and navigation bar â€” for a cleaner viewing experience.",
    "icons": {
        "128": "icons/icon128.png",
        "48": "icons/icon48.png",
        "32": "icons/icon32.png",
        "16": "icons/icon16.png"
